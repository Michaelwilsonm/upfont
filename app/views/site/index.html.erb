<div class="content">
  <div class="side">
    <h1 class="sideh1">font</h1>
    <i class="fa fa-arrow-circle-up fa-2x"></i>
    <ul class="left">
      <li><%= link_to_unless_current("Latest", { action: "index" }) %></li>
      <li><%= link_to "Most Popular", site_most_popular_path %></li>
      <li><%= link_to "Add Font", new_site_path %></li>
      <li><%= link_to "Curator" %></li>
    </ul>
    <div id="modal">
      <img src="assets/bondi.jpg" alt=""><br>
      <p><em>created by Michael Wilson</em></p>
      <a href="https://www.facebook.com/michael.wilson.10485" target="_blank" class="fa fa-facebook fa-2x"></a>
      <a href="mailto:1987wilsonm.mw@gmail.com?Subject=Hello" target="_top" class="fa fa-send fa-2x"></a>
      <a href="https://github.com/Michaelwilsonm" target="_blank" class="fa fa-github fa-2x"></a>
    </div>
  </div>
  <div id="fonts" class="transitions-enabled">
    <% @fonts.each do |f| %>
      <div class="box">
        <h1 id="<%= f.id %>" style="<%= f.font_family %>"><%= f.name %></h1>
        <p><%= f.weight %></p>
        <p>Created by <%= f.styles_by %></p>
          <ul class="squares" id="<%= f.id %>">
            <li><div class="red-square"></div><div class="red hex">#8BC34A</div></li>
            <li><div class="green-square"></div><div class="green hex">#F44336</div></li>
            <li><div class="yellow-square"></div><div class="yellow hex">#FFEB3B</div></li>
            <li><div class="purple-square"></div><div class="purple hex">#673AB7</div></li>
          </ul>
        <% if @voter.voted_for? f %>
          <a class="fa fa-arrow-circle-o-up fa-2x liked" id="<%= f.id %>" href="javascript: void(0)"></a>
          <p class="votes" style="font-family: 'Montserrat', sans-serif; color: #E91E63;"><%= pluralize(f.get_upvotes.size, "vote") %></p>
        <% else %>
          <%= link_to upvote_site_path(f), method: :post, class: "fa fa-arrow-circle-o-up fa-2x non-clicked", id: f.id do %>
        <% end %>
          <p class="votes" style="font-family: 'Montserrat', sans-serif;"><%= pluralize(f.get_upvotes.size, "vote") %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
